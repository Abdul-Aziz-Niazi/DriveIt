<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            tools:context=".MainActivity">
        <TextView
                android:id="@+id/signIn"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:text="SignIn"
                android:textColor="#fff"
                app:layout_constraintBottom_toTopOf="@id/signOut"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/signOut"
                android:layout_width="200dp"
                android:layout_margin="5dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:text="Sign out"
                android:textColor="#fff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/details"
                android:layout_width="200dp"
                android:layout_margin="5dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:text="Backup Details"
                android:textColor="#fff"
                app:layout_constraintVertical_bias=".3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signOut"/>
        <TextView
                android:id="@+id/auto_backup"
                android:layout_width="200dp"
                android:layout_margin="5dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:text="Auto=Backup"
                android:textColor="#fff"
                app:layout_constraintVertical_bias=".3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signOut"/>
        <TextView
                android:id="@+id/backup"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="Backup"
                android:textColor="#fff"
                app:layout_constraintVertical_bias=".2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/auto_backup"/>
        <TextView
                android:id="@+id/restore"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:text="Restore"
                android:textColor="#fff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backup"/>
        <TextView
                android:id="@+id/delete"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:text="Delete"
                android:textColor="#fff"/>
        <TextView
                android:id="@+id/updateOne"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:text="Update One"
                android:textColor="#fff"/>

        <TextView
                android:id="@+id/backup_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2d2d2d"
                android:text="backup:"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/signIn"
                app:layout_constraintBottom_toTopOf="@+id/signOut"
                android:gravity="center"/>

    </LinearLayout>
</layout>
